{
  "manifest_version": 3,
  "name": "Auth Callback Auto Close",
  "version": "1.0.0",
  "description": "Automatically closes successful OAuth callback tabs.",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["tabs", "webNavigation"],
  "host_permissions": ["http://127.0.0.1:*/oauth/callback*"],
  "background": {
    "service_worker": "background.js"
  }
}
